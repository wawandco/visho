{
	"name": "plushplungin",
	"displayName": "Plush Plugin",
	"description": "A plush extension for VScode",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.64.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:plushplungin.helloWorld",
		"onLanguage:plush"
	],
	"main": "./out/extension.js",
	"contributes": {
		"snippets": [{
            "language": "html",
            "path": "./snippets/snippets.json"
        }],
		"languages": [
			{
			  "id": "plush",
			  "aliases": [
				"Plush",
				"plush",
				"Go-Plush",
				"go-plush",
				"Plush-HTML",
				"plush-html"
			  ],
			  "extensions": [
				".html",
				".htm",
				".go-html",
				".plush-html",
				".plush"
			  ],
			  "mimetypes": [
				"text/html",
				"text/template",
				"text/ng-template",
				"application/xhtml+xml"
			  ],
			  "configuration": "./language-configuration.json"
			}
		  ],
		  "grammars": [
			{
			  "language": "plush",
			  "scopeName": "text.html.plush",
			  "path": "./syntaxes/plush.tmLanguage.json",
			  "embeddedLanguages": {
				"text.html": "html",
				"source.css": "css",
				"source.js": "javascript"
			  },
			  "tokenTypes": {
				"meta.tag string.quoted": "other"
			  }
			}
		  ]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.64.0",
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@typescript-eslint/eslint-plugin": "^5.1.0",
		"@typescript-eslint/parser": "^5.1.0",
		"eslint": "^8.1.0",
		"glob": "^7.1.7",
		"mocha": "^9.1.3",
		"typescript": "^4.4.4",
		"@vscode/test-electron": "^1.6.2"
	}
}
